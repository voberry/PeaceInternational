
@{
    ViewData["Title"] = "HotelRoomRate";
}

<div class="row">
    <div class="col-md-8">
        <h1 class="display-4">Hotel Room Rate</h1>
    </div>
    <div class="col-md-4">
        <input type="button" class="btn btn-info mt-4 w-100" data-toggle="modal" data-target="#createHotelRoomRate" id="addHotelRoomRateBtn" value="Add Hotel Room Rate" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchField" placeholder="Name" />
    </div>
</div>
<div style="height: 100%; box-sizing: border-box; padding-top:20px;">
    <div id="hotelRoomRateGrid" style="width:100%; height:450px" class="ag-theme-balham"></div>
</div>
<div class="modal fade" id="createHotelRoomRate" tabindex="-1" role="dialog" aria-labelledby="hotelRoomRateTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="hotelRoomRateForm">
            <div class="modal-content" style="background: linear-gradient(225deg, rgba(255,255,255,1) 0%, rgba(232,227,227,1) 100%);">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-light" id="hotelRoomRateTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />
                    <div class="form-group">
                        <label for="hotel">Hotel<span class="text-danger">*</span></label>
                        <select class="form-control w-100" name="hotel" id="hotel">
                            <option disabled selected value=" ">Select</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="singleBed"> Single Bed <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" name="singleBed" id="singleBed" />
                    </div>
                    <div class="form-group">
                        <label for="doubleBed"> Double Bed <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" name="address" id="doubleBed" />
                    </div>
                    <div class="form-group">
                        <label for="extraBed"> Extra Bed <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" name="extraBed" id="extraBed" />
                    </div>
                    <div class="form-row">                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ap"> AP <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="ap" id="ap" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="map"> MAP <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="map" id="map" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/hotelRoomRate.js"></script>
}




